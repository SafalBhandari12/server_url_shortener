generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum userRole {
  CANDIDATE
  COMPANY
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String?
  name     String

  // Email verification
  emailVerified              Boolean   @default(false)
  verificationToken          String?   @unique
  verificationTokenExpiresAt DateTime?

  // Refresh Tokens
  refreshTokens RefreshTokens[]

  // Password reset token
  passwordResetToken          String?   @unique
  passwordResetTokenExpiresAt DateTime?

  // Defining roles
  isRoleDefined Boolean  @default(false)
  role          userRole

  candidate Candidate?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Candidate {
  userId   String @unique
  name     String
  about    String
  location String

  education Education[]
  profile   Profile[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("candidate")
}

model Education {
  id          String @id @default(ulid())
  educationId String @unique

  name      String
  degree    String
  startYear Int
  endYear   Int

  candidate Candidate @relation(fields: [educationId], references: [userId], onDelete: Cascade)

  @@map("education")
}

model Profile {
  id        String @id @default(ulid())
  profileid String @unique

  title                   String
  resume                  String?
  skills                  String[]
  experienceYear          Int
  responsibilitiesHandled String[]

  candidate Candidate @relation(fields: [profileid], references: [userId], onDelete: Cascade)

  @@map("profile")
}

model RefreshTokens {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("refresh_tokens")
}

model Shortern {
  id        String   @id @default(cuid())
  shortCode String   @unique
  longUrl   String
  createdAt DateTime @default(now())
}
